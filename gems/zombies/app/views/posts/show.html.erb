<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Publishing:</strong>
  <%= @post.publishing %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @post.rating %>
