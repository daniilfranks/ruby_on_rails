<p id="notice"><%= notice %></p>

<%= debug @posts %>

<h1>Posts</h1>

<%= form_tag @posts_path, method: :get do %>
  <p><%= text_field_tag :q, '', placeholder: 'Search posts' %></p>
  <%= button_tag 'Search' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Publication</th>
      <th>Img</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.publication %></td>
        <td><%= image_tag (post.img), width: 64, hide: 64 %></td>
        <td><%= time_ago_in_words(post.created_at) %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @posts %>

<%= link_to 'New Post', new_post_path %>
