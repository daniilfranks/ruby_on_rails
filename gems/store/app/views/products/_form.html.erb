<%= form_with(model: product, local: true) do |form| %>
  <%= render 'shared/error_messages', object: form.object %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control', id: :product_title %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: 'form-control', id: :product_description %>
  </div>

  <div class="form-group">
    <%= form.label :image_url %>
    <%= form.text_field :image_url, class: 'form-control', id: :product_image_url %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, class: 'form-control', id: :product_price %>
  </div>

  <%= form.submit "Create my account", class: "btn btn-primary" %>
<% end %>
