<h1>Products</h1>

<%= link_to 'New Product', new_product_path, class: "alert-link" %>
<hr>

<% @products.each do |product| %>
  <h3><%= product.title %></h3>
  <p><%= product.description %></p>
  <p><%= image_tag(product.image_url, alt: product.title, size: 90) %></p>
  <p><b><%= number_to_currency(product.price) %></b></p>
  <p><%= link_to 'Show', product %> <%= link_to 'Edit', edit_product_path(product) %> <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <p><%= button_to 'Add cart', cart_items_path(product_id: product) %></p>
  <hr>
<% end %>
<br>

<%= paginate @products %>



