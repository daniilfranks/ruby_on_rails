<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>

<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <% @order.cart_items.includes(:product).each do |order| %>
    <%= order.product.title %>
    <%= order.product.price %>
    <%= order.total_price %>
    <%= order.quantity %>
    <br>
  <% end %>
  <h5>Total price: <%= @order.total_price %></h5>
</p>

<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>
