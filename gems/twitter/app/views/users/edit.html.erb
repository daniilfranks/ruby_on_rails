<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>

  <div class="form-group">
    <%= f.label :name, for: 'inputName' %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Name' , id: :user_name %>
  </div>

  <div class="form-group">
    <%= f.label :email, for: 'inputEmail' %>
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email', id: :user_email %>
  </div>

  <div class="form-group">
    <%= f.label :password, for: 'inputPassword' %>
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' , id: :user_password %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmation", for: 'inputPasswordConfirmation' %>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirmation', id: :user_password_confirmation %>
  </div>

  <%= f.submit "Save changes", class: "btn btn-primary" %>
<% end %>

<div class="form-group">
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails" target="_blank">change</a>
</div>
