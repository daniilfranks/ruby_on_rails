<% provide(:title, @title) %>

<%= gravatar_for @user %>
<h1><%= @user.name %></h1>
<span><%= link_to "view my profile", @user %></span>
<span><b>Microposts:</b> <%= @user.microposts.count %></span>

<%= render 'shared/stats' %>

<% if @users.any? %>
    <% @users.each do |user| %>
      <%= link_to gravatar_for(user, size: 30), user %>
    <% end %>
  </div>
<% end %>

<h3><%= @title %></h3>
<% if @users.any? %>
  <%= render @users %>
<%= paginate @users%>
<% end %>
