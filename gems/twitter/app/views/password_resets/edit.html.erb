<% provide(:title, 'Reset password') %>
<h1>Reset password</h1>


<%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="form-group">
    <%= hidden_field_tag :email, @user.email %>
  </div>

  <div class="form-group">
    <%= f.label :password, for: 'inputPasswordl' %>
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' , id: :user_password %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmation", for: 'inputPasswordConfirmation' %>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirmation', id: :user_password_confirmation %>
  </div>

  <%= f.submit "Update password", class: "btn btn-primary" %>
<% end %>
