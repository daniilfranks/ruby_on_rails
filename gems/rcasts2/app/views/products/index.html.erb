<h1>Products</h1>

<% if !session[:cart].nil? %>
  <%= session[:cart].size %>
<% end %>

<% if !session[:cart].nil? %>
  <% session[:cart].each do |c| %>
    <p><%= c['id'] %></p>
    <p><%= c['name'] %></p>
    <p><%= c['price'] %></p>
  <% end %>
<% end %>

<%= form_tag products_path(@product) do %>
  <%= submit_tag 'Add to cart' %>
<% end %>

<%= form_tag products_path(@product), method: :delete do %>
  <%= submit_tag 'Clear to cart' %>
<% end %>

