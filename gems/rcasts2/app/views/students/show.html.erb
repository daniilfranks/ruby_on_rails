<h1><%= @student.f_name %></h1>

<p><%= @student.l_name %></p>

<p><%= @student.active %></p>

<% if @student.active? %>
  <p>This student is currently active.</p>
<% else %>
  <p>This student is currently inactive.</p>
<% end %>

<p><%= link_to 'Activate', activate_student_path(@student) %></p>
<p><%= link_to 'Back', students_path %></p>